<main style="min-height: 100vh; background-color: #f0f4f8; padding: 40px; display: flex; justify-content: center; align-items: center;">
  <div style="width: 100%; max-width: 900px; background-color: #ffffff; padding: 40px; border-radius: 12px; box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);">
    
    <!-- Page Header -->
    <header style="text-align: center; margin-bottom: 40px;">
      <h1 style="font-size: 2.5rem; font-weight: 700; color: #2c3e50;">Add New Staff</h1>
      <p style="font-size: 1.1rem; color: #6c757d;">Fill in the details below to add a new staff member.</p>
    </header>

    <!-- Add Staff Form -->
    <form action="/hotel-booking/staff/add-staff" method="POST" enctype="multipart/form-data">

      <!-- Grid Layout for Inputs -->
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">

        <!-- Full Name -->
        <div>
          <label for="name" style="font-weight: 600;">Full Name</label>
          <input type="text" id="name" name="name" placeholder="John Doe" required
                 style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Badge Number -->
        <div>
          <label for="badgeNumber" style="font-weight: 600;">Badge Number</label>
          <input type="text" id="badgeNumber" name="badgeNumber" placeholder="12345" required
                 style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Role -->
        <div>
          <label for="role" style="font-weight: 600;">Role</label>
          <input type="text" id="role" name="role" placeholder="Manager, Receptionist" required
                 style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Salary -->
        <div>
          <label for="salary" style="font-weight: 600;">Salary ($)</label>
          <input type="number" id="salary" name="salary" placeholder="5000" required min="0" step="0.01"
                 style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Date of Birth -->
        <div>
          <label for="dateOfBirth" style="font-weight: 600;">Date of Birth</label>
          <input type="date" id="dateOfBirth" name="dateOfBirth" required
                 style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>
        
        <!-- Join Date -->
        <div>
          <label for="joinDate" style="font-weight: 600;">Join Date</label>
          <input type="date" id="joinDate" name="joinDate" required
                 style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- National ID -->
        <div>
          <label for="nationalId" style="font-weight: 600;">National ID Number</label>
          <input type="text" id="nationalId" name="nationalId" placeholder="987654321" required
                 style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Access Level -->
        <div>
          <label for="accessLevel" style="font-weight: 600;">Access Level</label>
          <select id="accessLevel" name="accessLevel" required
                  style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
            <option value="" disabled selected>Select Access Level</option>
            <option value="Admin">Admin</option>
            <option value="Manager">Manager</option>
            <option value="Staff">Staff</option>
          </select>
        </div>

        <!-- Hotel Assignment -->
        <div>
          <label for="hotel" style="font-weight: 600;">Assigned Hotel</label>
          <select id="hotel" name="hotel" required
                  style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
            <option value="" disabled selected>Select Hotel</option>
            <% hotels.forEach(hotel => { %>
              <option value="<%= hotel._id %>"><%= hotel.name %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <!-- Work Schedule -->
      <div style="margin-top: 20px;">
        <label for="scheduleDays" style="font-weight: 600;">Work Days</label>
        <div style="display: flex; flex-wrap: wrap; gap: 10px;">
          <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'].forEach(day => { %>
            <label>
              <input type="checkbox" name="scheduleDays[]" value="<%= day %>"> <%= day %>
            </label>
          <% }) %>
        </div>
      </div>

      <!-- Work Hours -->
      <div style="margin-top: 20px;">
        <label for="scheduleTime" style="font-weight: 600;">Work Hours</label>
        <input type="text" id="scheduleTime" name="scheduleTime" placeholder="9:00 AM - 5:00 PM" required
               style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Contact -->
      <div style="margin-top: 20px;">
        <label for="contact" style="font-weight: 600;">Contact Number</label>
        <input type="text" id="contact" name="contact" placeholder="+1 234 567 8900" required
               style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Email -->
      <div style="margin-top: 20px;">
        <label for="email" style="font-weight: 600;">Email Address</label>
        <input type="email" id="email" name="email" placeholder="example@mail.com" required
               style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Profile Photo -->
      <div style="margin-top: 20px;">
        <label for="profilePhoto" style="font-weight: 600;">Profile Photo</label>
        <input type="file" id="profilePhoto" name="profilePhoto" accept="image/*"
               style="width: 100%; padding: 8px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Submit Button -->
      <div style="text-align: center; margin-top: 30px;">
        <button type="submit" 
                style="background-color: #1cc88a; padding: 12px 30px; font-size: 1rem; border-radius: 8px; color: #fff; font-weight: bold; border: none;">
          Add Staff
        </button>
      </div>
    </form>
  </div>
</main>
