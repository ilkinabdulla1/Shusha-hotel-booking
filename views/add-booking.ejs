<main style="min-height: 100vh; background-color: #eef2f7; padding: 40px; display: flex; justify-content: center; align-items: flex-start;">
  <div style="width: 100%; max-width: 800px; background-color: #ffffff; padding: 40px; border-radius: 12px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">
    
    <h2 style="text-align: center; font-size: 2.2rem; font-weight: 700; color: #333; margin-bottom: 25px;">Add Booking</h2>

    <form action="/hotel-booking/bookings/add-booking" method="POST">
      
      <!-- Guest Name -->
      <div style="margin-bottom: 20px;">
        <label for="guestName" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Guest Name</label>
        <input type="text" id="guestName" name="guestName" placeholder="Enter guest name" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Guest Email -->
      <div style="margin-bottom: 20px;">
        <label for="guestEmail" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Guest Email</label>
        <input type="email" id="guestEmail" name="guestEmail" placeholder="Enter guest email" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Guest Phone -->
      <div style="margin-bottom: 20px;">
        <label for="guestPhone" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Guest Phone</label>
        <input type="text" id="guestPhone" name="guestPhone" placeholder="Enter guest phone number" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Number of Guests -->
      <div style="display: flex; gap: 20px; margin-bottom: 20px;">
        <div style="flex: 1;">
          <label for="adults" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Adults</label>
          <input type="number" id="adults" name="adults" value="1" min="1" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>
        <div style="flex: 1;">
          <label for="children" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Children</label>
          <input type="number" id="children" name="children" value="0" min="0" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>
      </div>

      <!-- Room Selection -->
      <div style="margin-bottom: 20px;">
        <label for="room" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Room</label>
        <select id="room" name="room" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="" disabled selected>Select Room</option>
          <% rooms.forEach(room => { %>
            <option value="<%= room._id %>">Room <%= room.roomNumber %> - <%= room.hotel.name %> ($<%= room.price %>/night)</option>
          <% }) %>
        </select>
      </div>

      <!-- Check-in Date -->
      <div style="margin-bottom: 20px;">
        <label for="checkInDate" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Check-in Date</label>
        <input type="date" id="checkInDate" name="checkInDate" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Check-out Date -->
      <div style="margin-bottom: 20px;">
        <label for="checkOutDate" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Check-out Date</label>
        <input type="date" id="checkOutDate" name="checkOutDate" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Payment Method -->
      <div style="margin-bottom: 20px;">
        <label for="paymentMethod" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Payment Method</label>
        <select id="paymentMethod" name="paymentMethod" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="" disabled selected>Select Payment Method</option>
          <option value="Credit Card">Credit Card</option>
          <option value="Cash">Cash</option>
          <option value="Online Payment">Online Payment</option>
        </select>
      </div>

      <!-- Status -->
      <div style="margin-bottom: 30px;">
        <label for="status" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Status</label>
        <select id="status" name="status" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="Active">Active</option>
          <option value="Completed">Completed</option>
          <option value="Cancelled">Cancelled</option>
        </select>
      </div>

      <!-- Submit Button -->
      <div style="text-align: center;">
        <button type="submit" style="background-color: #1cc88a; padding: 12px 25px; border-radius: 8px; color: #fff; font-size: 1rem; font-weight: bold; border: none;">Add Booking</button>
      </div>
    </form>
  </div>
</main>
