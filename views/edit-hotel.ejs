<main style="min-height: 100vh; background-color: #eef2f7; padding: 40px; display: flex; justify-content: center; align-items: center;">
  <div style="width: 100%; max-width: 900px; background-color: #ffffff; padding: 50px; border-radius: 12px; box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);">

    <!-- Page Header -->
    <div style="text-align: center; margin-bottom: 40px;">
      <h1 style="font-size: 2.8rem; font-weight: bold; color: #2c3e50;">Edit Hotel</h1>
    </div>

    <!-- Edit Hotel Form -->
    <form action="/hotel-booking/hotels/<%= hotel._id %>/edit" method="POST" enctype="multipart/form-data">
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
        <!-- Hotel Name -->
        <div>
          <label for="name" style="font-weight: bold;">Hotel Name</label>
          <input type="text" id="name" name="name" value="<%= hotel.name %>" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Location -->
        <div>
          <label for="location" style="font-weight: bold;">Location</label>
          <input type="text" id="location" name="location" value="<%= hotel.location %>" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>
      </div>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 20px;">
        <!-- Email -->
        <div>
          <label for="email" style="font-weight: bold;">Email</label>
          <input type="email" id="email" name="email" value="<%= hotel.email %>" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Phone -->
        <div>
          <label for="phone" style="font-weight: bold;">Phone</label>
          <input type="text" id="phone" name="phone" value="<%= hotel.phone %>" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>
      </div>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 20px;">
        <!-- Rating -->
        <div>
          <label for="rating" style="font-weight: bold;">Rating</label>
          <input type="number" step="0.1" max="5" min="0" id="rating" name="rating" value="<%= hotel.rating %>" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        </div>

        <!-- Status -->
        <div>
          <label for="status" style="font-weight: bold;">Status</label>
          <select id="status" name="status" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
            <option value="Open" <%= hotel.status === 'Open' ? 'selected' : '' %>>Open</option>
            <option value="Closed" <%= hotel.status === 'Closed' ? 'selected' : '' %>>Closed</option>
          </select>
        </div>
      </div>

      <!-- Description -->
      <div style="margin-top: 20px;">
        <label for="description" style="font-weight: bold;">Description</label>
        <textarea id="description" name="description" rows="4" style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;"><%= hotel.description %></textarea>
      </div>

      <!-- Facilities -->
      <div style="margin-top: 20px;">
        <label for="facilities" style="font-weight: bold;">Facilities</label>
        <div style="display: flex; flex-wrap: wrap; gap: 10px; padding: 15px; background-color: #f8f9fa; border-radius: 8px; border: 1px solid #ccc;">
          <% const availableFacilities = ['WiFi', 'Parking', 'Swimming Pool', 'Restaurant', 'Gym', 'Spa']; %>
          <% availableFacilities.forEach(facility => { %>
            <div style="display: flex; align-items: center; gap: 5px;">
              <input type="checkbox" id="<%= facility %>" name="facilities" value="<%= facility %>" <%= hotel.facilities.includes(facility) ? 'checked' : '' %>>
              <label for="<%= facility %>"><%= facility %></label>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Upload Image -->
      <div style="margin-top: 20px;">
        <label for="image" style="font-weight: bold;">Upload New Image</label>
        <input type="file" id="image" name="image" accept="image/*" style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
        <% if (hotel.image) { %>
          <p style="margin-top: 10px;">Current Image:</p>
          <img src="/uploads/hotels/<%= hotel.image %>" alt="Hotel Image" style="width: 150px; height: auto; border-radius: 5px;">
        <% } %>
      </div>

      <!-- Submit Button -->
      <div style="margin-top: 30px; text-align: center;">
        <button type="submit" style="background-color: #1cc88a; padding: 12px 25px; border-radius: 8px; color: #fff; font-size: 1rem; font-weight: bold; border: none;">Save Changes</button>
        <a href="/hotel-booking/hotels" style="display: inline-block; margin-top: 10px; text-decoration: none; color: #555;">Cancel</a>
      </div>
    </form>
  </div>
</main>
