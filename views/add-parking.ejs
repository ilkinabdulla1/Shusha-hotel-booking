<main class="main-content" style="min-height: 100vh; background-color: #f5f7fa; padding: 20px;">
  <div class="container" style="max-width: 700px; background-color: #ffffff; padding: 40px; border-radius: 15px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);">

    <!-- Page Header -->
    <div style="text-align: center; margin-bottom: 30px;">
      <h1 style="font-size: 2.2rem; font-weight: bold; color: #333;">Add New Parking Lot</h1>
    </div>

    <!-- Add Parking Form -->
    <form action="/parking-management/parkings/add" method="POST">
      
      <!-- Lot ID -->
      <div class="form-group" style="margin-bottom: 15px;">
        <label for="lotID" style="font-weight: bold;">Lot ID</label>
        <input 
          type="text" 
          id="lotID" 
          name="lotID" 
          class="form-control" 
          placeholder="Enter Parking Lot ID (e.g., LOT123)" 
          required 
          style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Hotel Selection -->
      <div class="form-group" style="margin-bottom: 15px;">
        <label for="hotel" style="font-weight: bold;">Select Hotel</label>
        <select 
          id="hotel" 
          name="hotel" 
          class="form-control" 
          required 
          style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="" disabled selected>Select Hotel</option>
          <% hotels.forEach(hotel => { %>
            <option value="<%= hotel._id %>"><%= hotel.name %></option>
          <% }) %>
        </select>
      </div>

      <!-- Parking Class -->
      <div class="form-group" style="margin-bottom: 15px;">
        <label for="classType" style="font-weight: bold;">Parking Class</label>
        <select 
          id="classType" 
          name="classType" 
          class="form-control" 
          required 
          style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="VIP">VIP</option>
          <option value="Standard">Standard</option>
          <option value="Economy">Economy</option>
        </select>
      </div>

      <!-- Total Spots -->
      <div class="form-group" style="margin-bottom: 15px;">
        <label for="totalSpots" style="font-weight: bold;">Total Spots</label>
        <input 
          type="number" 
          id="totalSpots" 
          name="totalSpots" 
          min="1" 
          class="form-control" 
          placeholder="Enter total parking spots" 
          required 
          style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Plan ($/hour) -->
      <div class="form-group" style="margin-bottom: 15px;">
        <label for="plan" style="font-weight: bold;">Pricing Plan ($/hour)</label>
        <input 
          type="number" 
          id="plan" 
          name="plan" 
          min="0" 
          step="0.01" 
          class="form-control" 
          placeholder="Enter hourly rate (e.g., 1.50)" 
          required 
          style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
      </div>


      <!-- Status -->
      <div class="form-group" style="margin-bottom: 15px;">
        <label for="status" style="font-weight: bold;">Status</label>
        <select 
          id="status" 
          name="status" 
          class="form-control" 
          required 
          style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="Open">Open</option>
          <option value="Closed">Closed</option>
          <option value="Under Maintenance">Under Maintenance</option>
        </select>
      </div>

      <!-- Initial Revenue -->
      <div class="form-group" style="margin-bottom: 15px;">
        <label for="revenue" style="font-weight: bold;">Initial Revenue ($)</label>
        <input 
          type="number" 
          id="revenue" 
          name="revenue" 
          min="0" 
          step="0.01" 
          class="form-control" 
          placeholder="Optional" 
          style="padding: 10px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Submit Button -->
      <div style="text-align: center;">
        <button 
          type="submit" 
          class="btn btn-success" 
          style="background-color: #1cc88a; padding: 12px 25px; border-radius: 8px; color: #fff; font-size: 1rem; font-weight: bold; border: none;">
          Add Parking Lot
        </button>
      </div>
    </form>

  </div>
</main>
