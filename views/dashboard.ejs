<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background-color: #f4f6f9;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .header h1 {
      font-size: 1.8rem;
      color: #333;
    }

    .search-bar input {
      padding: 10px;
      width: 300px;
      border-radius: 5px;
      border: 1px solid #ddd;
    }

    /* Overview Cards */
    .overview-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .card {
      background-color: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      text-align: center;
    }

    .card h3 {
      color: #555;
      font-weight: 500;
    }

    .card p {
      font-size: 2rem;
      font-weight: bold;
      color: #333;
    }

    /* Charts */
    .charts {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 20px;
      margin-bottom: 30px;
    }

    .chart-container {
      background-color: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    /* Table */
    .table-container {
      background-color: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table th, table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    table th {
      background-color: #f9fafb;
    }
  </style>
</head>

<body>

  <div class="container">
    
    <!-- Header -->
    <div class="header">
      <h1>Admin Dashboard</h1>
      <div class="search-bar">
        <input type="text" placeholder="Search bookings, rooms, etc.">
      </div>
    </div>

    <!-- Overview Cards -->
    <div class="overview-cards">
      <div class="card">
        <h3>Total Revenue</h3>
        <p>$32,800</p>
      </div>
      <div class="card">
        <h3>New Bookings</h3>
        <p>135</p>
      </div>
      <div class="card">
        <h3>Check-ins</h3>
        <p>101</p>
      </div>
      <div class="card">
        <h3>Check-outs</h3>
        <p>29</p>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="charts">
      <div class="chart-container">
        <h3>Revenue Over Time</h3>
        <canvas id="revenueChart"></canvas>
      </div>

      <div class="chart-container">
        <h3>Bookings by Platform</h3>
        <canvas id="platformChart"></canvas>
      </div>
    </div>

    <!-- Recent Bookings Table -->
    <div class="table-container">
      <h3>Recent Bookings</h3>
      <table>
        <thead>
          <tr>
            <th>Guest Name</th>
            <th>Room Type</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>John Doe</td>
            <td>Deluxe Room</td>
            <td>2024-01-10</td>
            <td>2024-01-15</td>
            <td>Confirmed</td>
          </tr>
          <tr>
            <td>Jane Smith</td>
            <td>Suite</td>
            <td>2024-01-12</td>
            <td>2024-01-14</td>
            <td>Pending</td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>

  <!-- Chart.js Scripts -->
  <script>
    // Revenue Over Time Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    new Chart(revenueCtx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Revenue',
          data: [5000, 7000, 8000, 12000, 15000, 18000],
          backgroundColor: 'rgba(0, 123, 255, 0.1)',
          borderColor: '#007BFF',
          borderWidth: 2
        }]
      }
    });

    // Bookings by Platform Chart
    const platformCtx = document.getElementById('platformChart').getContext('2d');
    new Chart(platformCtx, {
      type: 'doughnut',
      data: {
        labels: ['Website', 'Mobile App', 'Travel Agents'],
        datasets: [{
          data: [50, 30, 20],
          backgroundColor: ['#007BFF', '#28A745', '#FFC107']
        }]
      }
    });
  </script>

</body>

</html>
