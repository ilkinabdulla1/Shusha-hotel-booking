<main style="min-height: 100vh; background-color: #eef2f7; padding: 40px; display: flex; justify-content: center; align-items: flex-start;">
  <div style="width: 100%; max-width: 800px; background-color: #ffffff; padding: 40px; border-radius: 12px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">

    <h2 style="text-align: center; font-size: 2.2rem; font-weight: 700; color: #333; margin-bottom: 25px;">Add Room</h2>
    <p style="text-align: center; font-size: 1.1rem; color: #666; margin-bottom: 30px;">Fill out the details below to add a new room.</p>

    <form action="/hotel-booking/rooms/add-room" method="POST" enctype="multipart/form-data">

      <!-- Hotel Selection -->
      <div style="margin-bottom: 20px;">
        <label for="hotel" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Select Hotel</label>
        <select id="hotel" name="hotel" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="" disabled selected>Select Hotel</option>
          <% hotels.forEach(hotel => { %>
            <option value="<%= hotel._id %>"><%= hotel.name %></option>
          <% }) %>
        </select>
      </div>

      <!-- Room Number -->
      <div style="margin-bottom: 20px;">
        <label for="roomNumber" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Room Number</label>
        <input type="text" id="roomNumber" name="roomNumber" placeholder="Enter Room Number" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Room Image -->
      <div style="margin-bottom: 20px;">
        <label for="image" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Upload Room Image</label>
        <input type="file" id="image" name="image" accept="image/*" required style="width: 100%; padding: 8px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Room Type -->
      <div style="margin-bottom: 20px;">
        <label for="type" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Room Type</label>
        <select id="type" name="type" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="" disabled selected>Select Room Type</option>
          <option value="Single">Single</option>
          <option value="Double">Double</option>
          <option value="Suite">Suite</option>
        </select>
      </div>

      <!-- Bed Type -->
      <div style="margin-bottom: 20px;">
        <label for="bedType" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Bed Type</label>
        <select id="bedType" name="bedType" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="" disabled selected>Select Bed Type</option>
          <option value="Single Bed">Single Bed</option>
          <option value="Double Bed">Double Bed</option>
          <option value="Queen Bed">Queen Bed</option>
          <option value="King Bed">King Bed</option>
        </select>
      </div>

      <!-- Price per Night -->
      <div style="margin-bottom: 20px;">
        <label for="price" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Price per Night ($)</label>
        <input type="number" id="price" name="price" placeholder="Enter Price" step="0.01" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Max Occupancy -->
      <div style="margin-bottom: 20px;">
        <label for="maxOccupancy" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Max Occupancy</label>
        <input type="number" id="maxOccupancy" name="maxOccupancy" placeholder="Enter Max Occupancy" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Room Size (sq meters) -->
      <div style="margin-bottom: 20px;">
        <label for="roomSize" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Room Size (sq meters)</label>
        <input type="number" id="roomSize" name="roomSize" placeholder="Enter Room Size in square meters" step="0.01" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
      </div>

      <!-- Room Description -->
      <div style="margin-bottom: 20px;">
        <label for="description" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Room Description</label>
        <textarea id="description" name="description" rows="4" placeholder="Describe the room features, amenities, and size..." required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc; resize: none;"></textarea>
      </div>

      <!-- Facilities -->
      <div style="margin-bottom: 20px;">
        <label style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Facilities</label>
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px;">
          <label><input type="checkbox" name="facilities" value="WiFi"> WiFi</label>
          <label><input type="checkbox" name="facilities" value="TV"> TV</label>
          <label><input type="checkbox" name="facilities" value="Air Conditioning"> Air Conditioning</label>
          <label><input type="checkbox" name="facilities" value="Mini Bar"> Mini Bar</label>
          <label><input type="checkbox" name="facilities" value="Room Service"> Room Service</label>
          <label><input type="checkbox" name="facilities" value="Private Balcony"> Private Balcony</label>
        </div>
      </div>

      <!-- Room Status -->
      <div style="margin-bottom: 30px;">
        <label for="status" style="display: block; font-size: 1rem; font-weight: 600; margin-bottom: 5px;">Room Status</label>
        <select id="status" name="status" required style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid #ccc;">
          <option value="Available">Available</option>
          <option value="Occupied">Occupied</option>
          <option value="Out of Service">Out of Service</option>
        </select>
      </div>

      <!-- Submit Button -->
      <div style="text-align: center;">
        <button type="submit" style="background-color: #1cc88a; padding: 12px 25px; border-radius: 8px; color: #fff; font-size: 1rem; font-weight: bold; border: none;">
          Add Room
        </button>
      </div>

    </form>
  </div>
</main>
